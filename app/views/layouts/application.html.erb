<!DOCTYPE html>
<html>
  <head>
    <title>VeganShareApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">VeganShareApp</a></h1>
        <%# <div class="user_nav grid-6"> %>
          <%# <a class="post" href="/tweets/new">Share</a> %>
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <span><%= current_user.nickname %>
              <ul class="user__info">
                <li>
                  <%= link_to "My Page", "/users/#{current_user.id}" %>
                  <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </span>
          <%= link_to "Share", new_tweet_path, class: "post" %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "Log In", new_user_session_path, class: "post" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer>
      <p>
        Copyright VeganShareApp 2019.
      </p>
    </footer>
  </body>
</html>
