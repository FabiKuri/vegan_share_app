<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <%= form.text_field :sho_name, placeholder: "Shop Name" %>
      <%= form.text_area :content, placeholder: "text", rows: "10" %>
      <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>